<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HashGeneratorApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/primary_background</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="SplashScreenStyle" parent="Theme.Material3.DayNight">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="Theme.ActionBarConfigs" parent="android:Theme.Holo">
        <item name="colorControlNormal">@color/white</item>
    </style>

</resources>